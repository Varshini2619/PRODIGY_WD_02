        }

        @keyframes flowerBlast {
            0% { transform: scale(1); background: #f7b4aa; }
            50% { transform: scale(1.5); background: #FFD700; }
            100% { transform: scale(1); background: #ffddc1; }
        }

        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
